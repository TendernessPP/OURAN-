icomoon-font-path ?= "../static/fonts"

icon-edit = "\e904"
icon-delete = "\e906"
icon-cross = "\e909"
icon-search = "\e90b"

@font-face
  font-family 'icon'
  src url(icomoon-font-path + '/icon.eot?wr5yql')
  src url(icomoon-font-path + '/icon.eot?wr5yql#iefix') format('embedded-opentype'), url(icomoon-font-path + '/icon.ttf?wr5yql') format('truetype'), url(icomoon-font-path + '/icon.woff?wr5yql') format('woff'), url(icomoon-font-path + '/icon.svg?wr5yql#icon') format('svg')
  font-weight normal
  font-style normal

.icon
  font-family 'icon' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 2
  cursor pointer

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

$color-font = #666666
.icon-delete
  &:before
    content icon-delete
    color: #707070;

.icon-cross
  &:before
    content icon-cross

.icon-search
  &:before
    content icon-search

.icon-edit
  &:before
    content icon-edit
    //color #22a644
    color: #8a8a8a;
    font-size 18px

.icon-right
  transform scale(0.75)
  color #333
  //color #22303d
